{
  "name": "chordrectness",
  "version": "1.0.0",
  "description": "YouTube Chord Recognition Platform - Enterprise-grade monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "./scripts/build.sh",
    "down": "docker-compose down",
    "logs": "docker-compose logs -f",
    "dev:native": "turbo run dev",
    "build:native": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@chordrectness/docs && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "chord-recognition",
    "music-analysis",
    "youtube",
    "audio-processing",
    "jazz",
    "music-theory",
    "typescript",
    "nextjs",
    "express",
    "monorepo"
  ],
  "author": "ChordRectness Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/chordrectness.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/chordrectness/issues"
  },
  "homepage": "https://chordrectness.com"
}